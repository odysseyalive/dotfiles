# Ghostty Configuration for YADRLite
# Modern terminal with Kitty graphics protocol support
# https://ghostty.org

# Font settings
# Using Cascadia Code (not Nerd Font) for working ligatures
# https://github.com/ghostty-org/ghostty/discussions/4586
font-family = Cascadia Code
font-size = 10.5
font-feature = calt, liga, ss01, ss19, ss20

# Terminal settings
term = xterm-256color

# Window settings
window-decoration = true
window-padding-x = 0
window-padding-y = 0

# macOS specific - IMPORTANT for AeroSpace keybindings
macos-option-as-alt = true
macos-titlebar-style = native

# Scrollback
scrollback-limit = 10000

# Clipboard
clipboard-read = allow
clipboard-write = allow

# Mouse
mouse-hide-while-typing = true

# Shell integration
shell-integration = zsh

# Theme: SeaShells Dark (default)
# These colors will be updated by theme-switch.sh
background = 08131a
foreground = deb88d
cursor-color = fba02f
cursor-text = 08131a
selection-background = 1e4862
selection-foreground = deb88d

